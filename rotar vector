Algoritmo rotar_arreglos
	Dimension v[10]
	escribir "TamaÃ±o del arreglo"
	leer n
	si n>0 y n<=10 Entonces
		i<-1
		Repetir
			escribir "Numero"
			leer v[i]
			si v[i] MOD 2 = 0 Entonces
				i <- i+1
			FinSi
		Hasta Que i>n
		escribir "Elige una opcion"
		escribir " 1 <--- Rotar Derecha"
		leer op
		si op=1 Entonces
			i <-n-1
			j <- n
			Repetir
				v[i] <- v[j]
				j <- j-1
				i <- i-1
			Hasta Que i<1
			i <- 1
			mientras i<=n
				escribir v[i]
				i <- i+1
			FinMientras
		FinSi
	FinSi
FinAlgoritmo
